<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FireBrowserWinUi3.Pages.Patch.UpLoadBackup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FireBrowserWinUi3.Pages.Patch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <ComboBox
                x:Name="UserComboBox"
                DisplayMemberPath="Name"
                ItemsSource="{x:Bind ViewModel.Users, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{x:Bind ViewModel.SelectedUser, Mode=OneWay}" />
            <Button Command="{x:Bind ViewModel.SelectFileCommand}" Content="Select File" />
            <Button Command="{x:Bind ViewModel.GenerateAndSendCommand}" Content="Generate SAS Token and Send Email" />
        </StackPanel>
    </Grid>
</Window>
