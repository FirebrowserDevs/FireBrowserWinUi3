    <Grid Margin="16">
        <StackPanel
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!--  User Picture and Info  -->
            <Button
                Margin="0,0,0,12"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                BorderBrush="Transparent"
                IsEnabled="True">
                <StackPanel Orientation="Horizontal">
                    <PersonPicture
                        x:Name="Pimg"
                        Width="50"
                        ProfilePicture="{Helper:ImageHelper ImageName=clippy.png}" />
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock
                            x:Name="UsrBox"
                            FontSize="16"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            Text="{Binding Username}" />
                        <TextBlock FontSize="13" Text="Local Account" />
                    </StackPanel>
                </StackPanel>
            </Button>

            <!--  Profile Image Selector  -->
            <TextBlock
                Margin="0,0,0,6"
                FontSize="14"
                Text="Profile Image" />
            <ComboBox
                x:Name="ProfileImage"
                Width="Auto"
                SelectedItem="clippy"
                SelectionChanged="ProfileImage_SelectionChanged">
                <x:String>clippy</x:String>
                <x:String>sunflower</x:String>
                <x:String>butterfly</x:String>
                <x:String>present</x:String>
                <x:String>crayon</x:String>
                <x:String>ball</x:String>
                <x:String>bot</x:String>
                <x:String>starfish</x:String>
            </ComboBox>

            <!--  Username TextBox  -->
            <TextBlock
                Margin="0,0,0,6"
                FontSize="14"
                Text="Username" />
            <TextBox
                x:Name="Userbox"
                Margin="0,0,0,12"
                PlaceholderText="Enter your username"
                TextChanged="Userbox_TextChanged" />

            <!--  Password TextBox  -->
            <TextBlock
                Margin="0,0,0,6"
                FontSize="14"
                Text="Password" />
            <TextBox
                x:Name="PasswordBox"
                Margin="0,0,0,16"
                IsEnabled="False"
                IsReadOnly="True"
                Text="Enter password" />

            <!--  Action Buttons  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="160"
                    Margin="5"
                    Click="Button_Click"
                    Content="Confirm" />
                <Button
                    Width="160"
                    Margin="5"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
