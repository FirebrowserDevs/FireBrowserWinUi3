<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="FireBrowserBusiness.Pages.NewTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FireBrowserBusiness.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:firebrowser="using:FireBrowserBusiness.Controls"
    xmlns:dllimg="using:Assets"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:ConnectionId='2'  x:Name="Grid"                                                                                                 >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Button x:ConnectionId='3' x:Uid="NewTabEditButton"
             Style="{ThemeResource QuietButtonStyle}"
             Padding="6" Margin="0,31,64,0"
             VerticalAlignment="Top" HorizontalAlignment="Right"
             Content="{firebrowser:FluentIcon Glyph=&#xE70F;}"
             x:Name="Edit">
            <Button.Flyout>
                <Flyout Placement="Bottom">
                    <StackPanel>
                        <ToggleSwitch x:ConnectionId='13' x:Name="Type"                       >
                            Enable Auto Fill TextBox
                        </ToggleSwitch>
                        <ToggleSwitch x:ConnectionId='14' x:Name="Mode"                       >
                            Enable Light Mode
                        </ToggleSwitch>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
        <Button x:ConnectionId='4'                     >Settings</Button>
        <Button x:ConnectionId='5' x:Uid="NewTabSettingsButton"
             Style="{ThemeResource QuietButtonStyle}"
             Padding="6" Margin="0,31,32,0"
             VerticalAlignment="Top" HorizontalAlignment="Right"
             Content="{firebrowser:FluentIcon Glyph=&#xE713;}"
             x:Name="SetTab">
            <Button.Flyout>
                <Flyout Placement="Bottom">
                    <StackPanel Background="Transparent">
                        <GridView x:ConnectionId='8'  x:Name="GridSelect"                                                 Background="{ThemeResource SystemControlBackgroundTransparentRevealBorderBrush}">
                            <GridViewItem x:ConnectionId='10' x:Name="NoneGrid" Padding="12" Tag="None" x:FieldModifier="Public">
                                <StackPanel>
                                    <Image Width="100" Source="{dllimg:ImageLoader ImageName=BackgroundNone.png}"/>
                                    <TextBlock x:Uid="NewTabBackgroundNone" d:Text="None"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"/>
                                </StackPanel>
                            </GridViewItem>
                            <GridViewItem x:ConnectionId='11' x:Name="FsGrid" Padding="12" Tag="Featured" x:FieldModifier="Public">
                                <StackPanel>
                                    <Image Width="100" Source="{dllimg:ImageLoader ImageName=BackgroundBing.png}"/>
                                    <TextBlock x:Uid="NewTabBackgroundBing"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                                     Bind Image
                                    </TextBlock>
                                </StackPanel>
                            </GridViewItem>
                            <GridViewItem x:ConnectionId='12' x:Name="CsGrid" Padding="12" Tag="Custom" x:FieldModifier="Public">
                                <StackPanel>
                                    <Image Width="100" Source="{dllimg:ImageLoader ImageName=BackgroundCostum.png}"/>
                                    <TextBlock x:Uid="NewTabBackgroundCostum"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                                     Custom
                                    </TextBlock>
                                </StackPanel>
                            </GridViewItem>
                        </GridView>
                        <TextBlock FontWeight="Bold" Text="New-Tab Background Color ( ReOpen Or Apply To Change )"/>
                        <TextBox x:ConnectionId='9' IsEnabled="True" x:FieldModifier="Public" Margin="0,5,0,0" x:Name="NewColor"                                   />
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
        <Grid x:ConnectionId='6' HorizontalAlignment="Center" VerticalAlignment="Center" RowSpacing="4" x:Name="BigGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <AutoSuggestBox x:ConnectionId='7' x:Name="NewTabSearchBox"
                         x:Uid="SearchBar"
                         Grid.Row="0"
                         Height="40" 
                         MinWidth="150"
                         BorderThickness="1,1,1,1"
                         CornerRadius="5"
                         BorderBrush="{ThemeResource SystemAltHighColor}"
                         Background="Transparent"
                         Width="Auto"
                         VerticalContentAlignment="Center"                          
                         x:FieldModifier="Public"
                         >
                <AutoSuggestBox.Resources>
                    <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{ThemeResource SystemAltHighColor}"/>
                    <SolidColorBrush x:Key="TextControlButtonForeground" Color="{ThemeResource SystemAltHighColor}"/>
                </AutoSuggestBox.Resources>
            </AutoSuggestBox>
        </Grid>
    </Grid>
</Page>

