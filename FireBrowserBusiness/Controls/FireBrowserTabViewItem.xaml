<TabViewItem
    x:Class="FireBrowserBusiness.Controls.FireBrowserTabViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    x:Name="TabViewItem"
    PointerEntered="TabViewItem_PointerEntered">
    <FlyoutBase.AttachedFlyout>
        <Flyout SystemBackdrop="{ThemeResource AcrylicBackgroundFillColorDefaultBackdrop}">
            <Grid
                Width="412"
                Height="256"
                Margin="1,1,0,0"
                BorderBrush="{StaticResource SystemChromeGrayColor}"
                BorderThickness=".8"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Image
                    x:Name="ImgTabViewItem"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Stretch="UniformToFill"
                    UseLayoutRounding="True" />
            </Grid>
        </Flyout>
    </FlyoutBase.AttachedFlyout>
</TabViewItem>
